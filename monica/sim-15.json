		"_events": [
			"daily", ["Date", "Crop", "Yield"],

			"2015-07-03", ["Date", "Stage", "AbBiom", "LAI"],

			"2015-08-11", ["Date", "Stage", "AbBiom", "LAI", ["OrgBiom", "Shoot"], ["OrgBiom", "Leaf"]],

