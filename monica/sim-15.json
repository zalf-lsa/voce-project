		"no-of-climate-file-header-lines": 1,
		"csv-separator": ";",
		"header-to-acd-names": {}
	},
	
	"debug?": false,
	"include-file-base-path": "C:/Users/berg.ZALF-AD/GitHub/",
	"_ss": "./",
	
	"output": { 
	  "write-file?": false,
		"file-name": "out.csv",
		"path-to-output": "./",
		"csv-options": {
			"include-header-row": true,
			"include-units-row": true,
			"csv-separator": ","
